{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "erupt": {
            "projectType": "application",
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "less"
                },
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular/build:application",
                    "options": {
                        "outputPath": {
                            "base": "/Users/liyuepeng/git/erupt/erupt-web/src/main/resources/public",
                            "browser": ""
                        },
                        "index": "src/index.html",
                        "tsConfig": "tsconfig.app.json",
                        "polyfills": [
                          "src/polyfills.ts"
                        ],
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/erupt",
                            "src/manifest.json",
                            "src/pre.css",
                            "src/pre.js",
                            "src/app.css",
                            "src/app.js",
                            "src/app.module.js",
                            "src/home.html",
                            "src/auth.html",
                            "src/logo.png",
                            "src/erupt.svg",
                            "src/erupt2.svg",
                            "src/erupt-logo.svg",
                            "src/erupt.i18n.csv",
                            {
                                "glob": "**/*",
                                "input": "./libs/ueditor/",
                                "output": "/assets/ueditor/"
                            },
                            {
                                "glob": "**/*",
                                "input": "./node_modules/font-awesome/fonts/",
                                "output": "/assets/font-awesome/fonts/"
                            },
                            {
                                "glob": "**/*",
                                "input": "./node_modules/font-awesome/css/",
                                "output": "/assets/font-awesome/css/"
                            },
                            {
                                "glob": "**/*",
                                "input": "./node_modules/monaco-editor/min/vs/",
                                "output": "/assets/vs/"
                            },
                            {
                                "glob": "**/*",
                                "input": "./libs/vditor/",
                                "output": "/assets/vditor/"
                            }
                        ],
                        "styles": [
                            "node_modules/@worktile/gantt/styles/index.scss",
                            "src/styles.less",
                            "node_modules/vditor/src/assets/less/index.less"
                        ],
                        "scripts": [],
                        "allowedCommonJsDependencies": [
                            "ajv",
                            "ajv-formats",
                            "mockjs",
                            "file-saver",
                            "extend"
                        ],
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "node_modules/"
                            ]
                        },
                        "browser": "src/main.ts"
                    },
                    "configurations": {
                        "production": {
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all",
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "6mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "15kb",
                                    "maximumError": "30kb"
                                }
                            ]
                        },
                        "development": {
                          "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular/build:dev-server",
                    "options": {
                        "buildTarget": "erupt:build",
                        "proxyConfig": "proxy.conf.js"
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "erupt:build:production"
                        },
                        "development": {
                            "buildTarget": "erupt:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular/build:extract-i18n",
                    "options": {
                        "buildTarget": "erupt:build"
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "src/**/*.ts",
                            "src/**/*.html"
                        ]
                    }
                }
            }
        }
    },
    "cli": {
        "packageManager": "yarn",
        "schematicCollections": [
            "@schematics/angular",
            "erupt"
        ],
        "analytics": "f2ae5cb3-075a-4c45-85b4-b94fae41e239"
    }
}
